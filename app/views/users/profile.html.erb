
    <div class="page-header"> 
      <div class="second_header"> <%= current_user.first_name%> 's Profile</div>
    </div>

  <div class="container-fluid content_padding">
    <div class="row-fluid">


      <div class="span6 content_padding">
        <table class="table table-bordered user_profile_date_table">
            <tbody>
              <tr>
                <td><b>First Name</b></td>
                <td><%= current_user.first_name%> </td>
              </tr>
              <tr>
                <td><b>Last Name: </b></td>
                <td><%= current_user.last_name %></td>
              </tr>
              <tr>
                <td><b>Email: </b></td>
                <td><%= current_user.email %></td>
              </tr>
              <tr>
                <td><b>Facebook: </b></td>
                <td><%= current_user.fb_url %></td>
              </tr>              
              <tr>
                <td><b>Location: </b></td>
                <td><%= current_user.location %></td>
              </tr>

            </tbody>
          </table>
          	<br><br>
          	<h3> <%= link_to('Go to Edit Profile', edit_user_registration_path) %></h3>
      </div>
      <div class="span4">
        <% if current_user.image.nil? %>
           <%= image_tag("user_default.png", :size => '300x300', :class => 'img-polaroid') %> 
        <% else %> 
            <%= image_tag current_user.image, :size => '300x300', :class => 'img-polaroid' %> 
        <% end %><br>

        <h4>Joined at: </h4> <%= current_user.created_at.strftime('%B %d, %Y') %> <br>
        <h4>Last Signed in at: </h4> <%= current_user.last_sign_in_at.strftime('%B %d, %Y') %> 

      </div>
</div>
</div>


<%= link_to "Back", :back %>
