<div class="product list">
  <h2>Products</h2>
  
  <%= link_to("List a Product", {:action => 'new'}, :class => 'action new') %>
  <table border="1" class="listing" summary="Product list">
    <tr class="header" style="font-size:20px;">
      <th>Product Name</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Price</th>
	  <th>Quantity</th>
	  <th>Actions</th>
    </tr>
    <% @products.each do |product| %>
    <tr>
      <td><%= product.product_name %></td>
      <td><%= product.description %></td>
      <td><%= product.brand %></td>
      <td><%= product.price %></td>
      <td><%= product.quantity %></td>
	  <td>	
        <%= link_to("Details", {:action => 'show', :id => product.id}, :class => 'action show') %>
		<%= link_to("Update", {:action => 'edit', :id => product.id}, :class => 'action delete') %>
		<%= link_to("Delete", {:action => 'delete', :id => product.id}, :class => 'action delete') %>
	  </td>
    </tr>
    <% end %>
  </table>
</div>
