<%= devise_error_messages! %>

<div class="page-header">
  <div class="second_header">Change your password</div>
</div>

<div class="container-fluid content_padding">
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put}) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <%= f.password_field :password, :placeholder => "New password" %>
      <br>

      <%= f.password_field :password_confirmation, :placeholder => "Confirm new password" %>

      <div><%= f.submit "Change my password", :class=> "btn btn-primary" %></div>
  <% end %>

</div>
