<%= devise_error_messages! %>
  
<div class="page-header">
  <div class="second_header">Sign Up</div>
  <div class="no_account_header">Already Signed Up ?</div>
  <div class="sign_up_now">
    <%- if controller_name != 'sessions' %>
        <%= link_to "Sign in !", new_session_path(resource_name) %>
        <br/></div>
    <% end -%></div>


<div class="container-fluid content_padding">
  <div class="row-fluid">
    <div class="span4 user_signin">

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= f.text_field :first_name, :placeholder =>"First Name" %>
          <%= f.text_field :last_name, :placeholder =>"Last Name" %>
          <%= f.email_field :email, :placeholder =>"Email Address" %>
          <%= f.password_field :password, :placeholder =>"Password" %>
          <%= f.password_field :password_confirmation, :placeholder =>"Password Confirmation" %>

          <div><%= f.submit "Sign up", :class=> "btn btn-primary pull-left" %></div><br><br>
          <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>

      <% end %>
    </div>
    <div class="span3"></br></br></br>
      <center>
        <div class="circle align_center"> OR</div>
      </center>
    </div>
    <div class="span3 fb_signin">
      <%- if devise_mapping.omniauthable? %>
          </br></br></br>
          <%- resource_class.omniauth_providers.each do |provider| %>
              <%= link_to image_tag("facebook_logo.png", :size=>"246x44"), omniauth_authorize_path(resource_name, provider) %>

          <% end -%>
      <% end -%>
    </div>
  </div>
</div>

