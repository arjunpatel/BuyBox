

    <div class="page-header"> 
      <div class="second_header">Edit <%= resource_name.to_s.humanize %></div>
    </div>

  <div class="container-fluid content_padding">
    <div class="row-fluid">


<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

      <div class="span6 content_padding">
        <table class="table table-bordered user_profile_date_table">
            <tbody>
              <tr>
                <td><b>First Name</b></td>
                <td><%= f.text_field :first_name%> </td>
              </tr>
              <tr>
                <td><b>Last Name: </b></td>
                <td><%= f.text_field :last_name %></td>
              </tr>
              <tr>
                <td><b>Email: </b></td>
                <td><%= f.text_field :email %></td>
              </tr>
              <tr>
                <td><b>Facebook: </b></td>
                <td><%= f.text_field :fb_url %></td>
              </tr>              
              <tr>
                <td><b>Location: </b></td>
                <td><%= f.text_field :location %></td>
              </tr>
              <tr>
                <td><b>New Password: </b></td>
                <td><%= f.password_field :password, :autocomplete => "off" %></td>
              </tr>
              <tr>
                <td><b>Confirm New Password: </b></td>
                <td><%= f.password_field :password_confirmation %></td>
              </tr>
              <tr>
                <td><b>Current Password: </b></td>
                <td><%= f.password_field :current_password %></td>
              </tr>

            </tbody>
          </table>
    
         <%= f.submit "Update", :class => "btn btn-primary"%>
        <br/><br/>
         <h3>Cancel my account</h3>

        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>.</p>
      </div>
      <div class="span4">
        <% if current_user.image.nil? %>
           <%= image_tag("user_default.png", :size => '300x300', :class => 'img-polaroid') %> 
        <% else %> 
            <%= image_tag current_user.image, :size => '300x300', :class => 'img-polaroid' %> 
        <% end %><br>

        <h4>Joined at: </h4> <%= current_user.created_at.strftime('%B %d, %Y') %> <br>
        <h4>Last Signed in at: </h4> <%= current_user.last_sign_in_at.strftime('%B %d, %Y') %> 
        <br> <h3><%= link_to('View My Profile', user_root_path) %></h3>
      </div>
<% end %>
</div>
</div>


<%= link_to "Back", :back %>
