<div class="modal hide" id="error_modal" style="margin-top: 0px;">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h3>Error</h3>
  </div>
  <div class="modal-body">
    <p>To have a valid rating, you must pick a rating and your comment must be greater than 10 characters</p>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal" >Close</a>
  </div>
</div>

<%= form_for([@user, @user.reviews.build]) do |f| %>

    <%= f.hidden_field :reviewer_id, :value => current_user.id %>

    <div class="field">
  <h5>Rating : </h5>
    <fieldset class="rating">
        <input type="radio" id="star5" name="review[rating]" value="5" /><label for="star5" title="Rocks!">5 stars</label>
        <input type="radio" id="star4" name="review[rating]" value="4" /><label for="star4" title="Pretty good">4 stars</label>
        <input type="radio" id="star3" name="review[rating]" value="3" /><label for="star3" title="Meh">3 stars</label>
        <input type="radio" id="star2" name="review[rating]" value="2" /><label for="star2" title="Kinda bad">2 stars</label>
        <input type="radio" id="star1" name="review[rating]" value="1" /><label for="star1" title="Sucks big time">1 star</label>
    </fieldset>
  </div><br><br>
    <h5>Comment :</h5>
    <%= f.text_area :comment, :id => "review_area" %><p>

  <div class="actions">
    <%= f.submit "Submit", :class => 'btn btn-primary' %>

  </div>
<% end %>






