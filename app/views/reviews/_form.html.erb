<%= form_for([@user, @user.reviews.build]) do |f| %>
    <div class="field">
  <%= f.label :rating %><br />
    <%= f.text_field :rating %>
  </div>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_area :comment, :rows=>6, :cols=>40%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>